<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/task0Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#212121"
        android:paddingBottom="18dp"
        android:paddingLeft="28dp"
        android:paddingRight="28dp"
        android:paddingTop="18dp"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/task0Head"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Foo"
            android:textColor="#ffffff"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/addButton0"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/task0Head"
            android:layout_alignStart="@+id/task0Head"
            android:layout_alignTop="@+id/linearLayout0"
            android:layout_marginTop="34dp"
            android:background="@android:color/transparent"
            android:tint="#ffffff"
            android:src="@drawable/arrowupward" />

        <ImageButton
            android:id="@+id/subButton0"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/task0Head"
            android:layout_alignRight="@+id/task0Head"
            android:layout_alignTop="@+id/addButton0"
            android:background="@android:color/transparent"
            android:textSize="50sp"
            android:tint="#ffffff"
            android:src="@drawable/arrowdownward" />

        <LinearLayout
            android:id="@+id/linearLayout0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/task0Head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/task0Count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily='"sans-serif-thin"'
                android:text="@string/taskXCount"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="80sp"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>